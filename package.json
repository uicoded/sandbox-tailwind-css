{
  "name": "sandbox-tailwind-css",
  "version": "1.0.0",
  "private": true,
  "description": "Tailwind CSS with PostCSS",
  "scripts": {
    "init": "npx tailwindcss init -p",
    "build": "postcss ./src/styles/main.css -o ./dist/main.css --env production",
    "watch": "postcss ./src/styles/main.css -o ./dist/main.css --watch",
    "start": "npm run watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.17"
  }
}
